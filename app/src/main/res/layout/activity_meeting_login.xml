<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.huaneng.zhgd.LoginActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/gd_toolbar_layout"/>

    <ImageView
        android:id="@+id/bannerImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/meeting_baner_img"/>

    <EditText
        android:id="@+id/nameTv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/ic_user"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:hint="请输入用户名"
        android:padding="5dp"
        android:textSize="@dimen/mediumTextSize"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="1px"
        android:background="@color/gray_999"/>

    <RelativeLayout
        android:id="@+id/passwdLy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/passwdTv"
            android:drawableLeft="@drawable/ic_passwd"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/white"
            android:inputType="textPassword"
            android:hint="请输入密码"
            android:padding="5dp"
            android:textSize="@dimen/mediumTextSize"/>

        <ImageView
            android:id="@+id/passwordVisibleImg"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="20dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/eye_selector"/>
    </RelativeLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="1px"
        android:background="@color/gray_999"/>

    <EditText
        android:id="@+id/roomIdTv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/ic_user"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:hint="请输入房间号"
        android:padding="5dp"
        android:textSize="@dimen/mediumTextSize"/>

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="1px"
        android:background="@color/gray_999"/>

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:onClick="login"
        android:background="@drawable/btn_color_primary"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/largeTextSize"/>

</LinearLayout>
