<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:paddingTop="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/personalInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/selector_bg">

        <ImageView
            android:id="@+id/headImg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/gruser" />

        <TextView
            android:id="@+id/nameTv"
            android:text="admin"
            android:layout_marginTop="5dp"
            android:layout_below="@id/headImg"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/largeTextSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/accountTv"
            android:text="账号：admin"
            android:layout_below="@id/nameTv"
            android:textColor="@color/gray_999"
            android:textSize="@dimen/mediumTextSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/navigate_next"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <TextView
        android:id="@+id/updatePwdTv"
        android:layout_marginTop="20dp"
        android:text="修改密码"
        android:padding="10dp"
        android:clickable="true"
        android:textColor="@color/primaryTextColor"
        android:textSize="@dimen/mediumTextSize"
        android:drawableRight="@drawable/navigate_next"
        android:background="@drawable/selector_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:id="@+id/updateLy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-1dp">

        <TextView
            android:id="@+id/updateTv"
            android:text="检查更新"
            android:padding="10dp"
            android:clickable="true"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/mediumTextSize"
            android:drawableRight="@drawable/navigate_next"
            android:background="@drawable/selector_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="New"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="30dp"
            android:id="@+id/newTv"
            android:visibility="gone"
            android:background="@drawable/shape_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/smallTextSize"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"/>
    </FrameLayout>


    <TextView
        android:id="@+id/aboutTv"
        android:text="关于"
        android:layout_marginTop="-1dp"
        android:padding="10dp"
        android:clickable="true"
        android:textColor="@color/primaryTextColor"
        android:textSize="@dimen/mediumTextSize"
        android:drawableRight="@drawable/navigate_next"
        android:background="@drawable/selector_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/quitTv"
        android:layout_marginTop="30dp"
        android:text="退出登录"
        android:padding="10dp"
        android:gravity="center"
        android:clickable="true"
        android:textColor="@color/red"
        android:textSize="@dimen/mediumTextSize"
        android:drawableRight="@drawable/navigate_next"
        android:background="@drawable/selector_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom|center_horizontal">
        <TextView
            android:id="@+id/versionTv"
            android:padding="10dp"
            android:textColor="@color/gray_999"
            android:textSize="@dimen/mediumTextSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>