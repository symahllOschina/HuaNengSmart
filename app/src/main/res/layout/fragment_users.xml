<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fs_users_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/meeting"
    android:alpha="0.7"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/id_users_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_3_80"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/TextSize10"
        android:paddingRight="@dimen/TextSize10"
        android:paddingTop="@dimen/TextSize05">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/width_10_80"
            android:text="@string/users_title"
            android:layout_weight="1"
            android:textSize="@dimen/TextSize20"
            android:textColor="@color/white"
            android:padding="@dimen/TextSize10"/>
        <TextView
            android:id="@+id/id_users_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/width_10_80"
            android:textSize="@dimen/TextSize20"
            android:textColor="@color/white"
            android:text="共0人" />
    </LinearLayout>
    <ListView
        android:id="@+id/id_users_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/width_3_80"
        android:layout_below="@id/id_users_title"/>

    <LinearLayout
        android:id="@+id/id_liverecord_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_3_80"
        android:orientation="horizontal"
        android:visibility="gone"
        android:paddingLeft="@dimen/TextSize10"
        android:paddingRight="@dimen/TextSize10"
        android:paddingTop="@dimen/TextSize05"
        android:layout_below="@id/id_users_list" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/width_10_80"
            android:layout_weight="1"
            android:text="@string/lvrec_title"
            android:textSize="@dimen/TextSize20"
            android:textColor="@color/white"
            android:padding="@dimen/TextSize10"/>
    </LinearLayout>
    <ListView
        android:id="@+id/id_lvrec_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/width_3_80"
        android:visibility="gone"
        android:layout_below="@id/id_liverecord_title"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>