<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/city"
            tools:text="西安市"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/mediumTextSize"
            android:textColor="@color/weather_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/cond_txt"
            tools:text="晴"
            android:layout_marginTop="20dp"
            android:textSize="@dimen/mediumTextSize"
            android:textColor="@color/weather_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/cond_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            tools:src="@drawable/sunny"/>

        <TextView
            android:id="@+id/tmp"
            tools:text="7° 微风"
            android:textSize="@dimen/largeTextSize"
            android:textColor="@color/weather_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="空气质量"
            android:layout_marginLeft="5dp"
            android:textSize="@dimen/mediumTextSize"
            android:textColor="@color/gray_999"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="10dp"
            android:background="@color/gray_999"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/pm25"
                    tools:text="15"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/mediumTextSize"
                    android:textColor="@color/weather_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="PM2.5"
                    android:layout_below="@id/pm25"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/extraSmallTextSize"
                    android:textColor="@color/gray_999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/pm10"
                    tools:text="12"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/mediumTextSize"
                    android:textColor="@color/weather_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="PM10"
                    android:layout_below="@id/pm10"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/extraSmallTextSize"
                    android:textColor="@color/gray_999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/no2"
                    tools:text="12"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/mediumTextSize"
                    android:textColor="@color/weather_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="NO2"
                    android:layout_below="@id/no2"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/extraSmallTextSize"
                    android:textColor="@color/gray_999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/so2"
                    tools:text="12"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/mediumTextSize"
                    android:textColor="@color/weather_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="SO2"
                    android:layout_below="@id/so2"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/extraSmallTextSize"
                    android:textColor="@color/gray_999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/co"
                    tools:text="12"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/mediumTextSize"
                    android:textColor="@color/weather_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="CO"
                    android:layout_below="@id/co"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/extraSmallTextSize"
                    android:textColor="@color/gray_999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/o3"
                    tools:text="12"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/mediumTextSize"
                    android:textColor="@color/weather_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="O3"
                    android:layout_below="@id/o3"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/extraSmallTextSize"
                    android:textColor="@color/gray_999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:text="近3天天气"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:textSize="@dimen/mediumTextSize"
            android:textColor="@color/gray_999"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="5dp"
            android:background="@color/gray_999"/>

        <com.huaneng.zhgd.utils.MyListView
            android:id="@+id/dailyListView"
            android:divider="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="10dp"
            android:text="生活指数"
            android:layout_marginLeft="5dp"
            android:textSize="@dimen/mediumTextSize"
            android:textColor="@color/gray_999"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="10dp"
            android:background="@color/gray_999"/>

        <com.huaneng.zhgd.utils.MyListView
            android:id="@+id/lifestyleListView"
            android:divider="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</ScrollView>