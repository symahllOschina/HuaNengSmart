<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTime"
        android:padding="@dimen/TextSize05"
        android:layout_margin="@dimen/TextSize10"
        android:textSize="@dimen/TextSize14"
        android:text="今天是2014-09-91"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/TextSize10"
        android:layout_marginRight="@dimen/TextSize10"
        android:orientation="horizontal"
        android:gravity="right">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvMessage"
            android:gravity="center_vertical"
            android:textSize="@dimen/TextSize14"
            android:layout_toLeftOf="@+id/linearLayout"
            android:layout_marginRight="@dimen/TextSize10"
            android:background="@drawable/chatto_bg_normal"/>
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <com.huaneng.zhgd.video.meeting.CircleImageView
                android:id="@+id/ivHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_head_he"/>
            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/TextSize10"
                android:text="天上的门"/>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
