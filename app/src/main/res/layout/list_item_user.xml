<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_userlist_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/id_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="3tee avd user1"
        android:padding="@dimen/width_1_80"
        android:layout_marginLeft="@dimen/width_3_80"
        android:textSize="@dimen/TextSize14"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/id_user_audio_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/width_3_80"
        android:visibility="gone"
        android:background = "@drawable/icon_audio_level_1" />
    <ImageButton
        android:id="@+id/id_user_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/width_3_80"
        android:background = "@drawable/icon_audio_status" />
    <ImageButton
        android:id="@+id/id_user_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/width_3_80"
        android:background = "@drawable/icon_video_status" />
    <ImageView
        android:id="@+id/id_user_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/width_5_80"
        android:src = "@drawable/icon_screen_status" />

</LinearLayout>
