<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="nav_tab_radio">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/radio_text_color</item>

        <item name="android:textSize">10sp</item>
    </style>

    <style name="NoTitleFullscreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--三体-->
    <style name="loginInput">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/TextSize17</item>
        <item name="android:layout_marginLeft">@dimen/TextSize05</item>
        <item name="android:padding">@dimen/TextSize05</item>
        <item name="android:textColorHint">@color/hintWhite</item>
        <item name="android:background">@null</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:alpha">178</item>
    </style>
    <style name="loginLinear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_6_80</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">@dimen/TextSize10</item>
        <item name="android:background">@drawable/mainbg</item>
    </style>
    <style name="lineVertical">
        <item name="android:layout_width">@dimen/TextSize01</item>
        <item name="android:layout_height">@dimen/TextSize22</item>
        <item name="android:background">#30000000</item>
        <item name="android:layout_margin">@dimen/TextSize05</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="lineHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/TextSize01</item>
        <item name="android:background">@drawable/line1</item>
    </style>
    <style name="lineHorizontal2dp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/TextSize01</item>
        <item name="android:background">@color/chat_from_user_color</item>
    </style>
    <style name="default_ui_bg" parent="android:Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="myCheckboxStyle" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_style</item>
    </style>
    <style name="Translucent_Theme" parent="android:style/Theme.Holo.Light.Dialog.MinWidth">
        <!-- 显示时屏幕不变暗 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 设置window背景透明，也就是去边框 -->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>
